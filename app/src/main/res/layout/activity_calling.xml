<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_242528"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_industry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/textSize16" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/textSize30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_call_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calling"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:id="@+id/tv_calling_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/textSize16" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bot_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black_242528"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customer_we_char_num"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_we_chat_num"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:hint="@string/hint_input_we_char_num"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_99ffffff"
                    android:textSize="@dimen/textSize16" />

                <View style="@style/lineStyleHorizontal" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customer_phone_num"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_phone_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:enabled="false"
                    android:hint="@string/hint_input_phone_num"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_99ffffff"
                    android:textSize="@dimen/textSize16" />

<!--                <View style="@style/lineStyleHorizontal" />-->
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_continuous_call"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_continuous_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_continuous_call_out" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/continuous_call"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_speak"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="22dp"
                android:visibility="visible"
                android:src="@drawable/ic_speak_out" />

            <ImageView
                android:id="@+id/iv_hang_up"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:visibility="visible"
                android:layout_weight="3"
                android:src="@drawable/ic_hang_up" />

<!--            <Button-->
<!--                android:id="@+id/bt_baocun"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:background="@drawable/shape"-->
<!--                android:visibility="gone"-->
<!--                android:text="保存"-->
<!--                android:textSize="33dp"-->
<!--                android:textColor="#fafafa"></Button>-->
            <!--                android:drawableLeft="@drawable/baocun"-->
            <ImageView
                android:id="@+id/iv_edit_call"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:visibility="visible"
                android:layout_weight="1"
                android:padding="24dp"
                android:src="@drawable/ic_edit_call" />

        </LinearLayout>

        <!-- 旧版本界面 弃用20201209 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_corner_38dp_empty_with_gray_line"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/ll_speak"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_corner_left_38dp_empty"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_speak" />

                <TextView
                    android:id="@+id/tv_speak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"
                    android:text="@string/speak_on"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize16" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_c3c5cb" />

            <LinearLayout
                android:id="@+id/ll_save_and_hang_up"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_red"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_hand_up_empty" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"
                    android:text="@string/hang_up"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize16" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_c3c5cb" />

            <LinearLayout
                android:id="@+id/ll_call_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_corner_right_38dp_blue"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_call_next" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="@string/call_next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize16" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_show_all"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_above="@id/ll_bot_View"
        android:layout_centerHorizontal="true"
        android:background="@color/black_242528"
        android:paddingTop="4dp"
        android:scaleType="center"
        android:src="@drawable/ic_pull_down_write"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/iv_show_all"
        android:layout_below="@+id/ll_top_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="@dimen/textSize10"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customer_property"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize16" />

            <com.yidiantong.widget.ScrollViewWithGridView
                android:id="@+id/svgv_customer_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numColumns="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/customer_intention"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize16" />

            <com.yidiantong.widget.ScrollViewWithGridView
                android:id="@+id/svgv_customer_intention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numColumns="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/customer_emotion"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize16" />

            <com.yidiantong.widget.ScrollViewWithGridView
                android:id="@+id/svgv_customer_emotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numColumns="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="@string/other"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize16" />

            <com.yidiantong.widget.FlowLayout
                android:id="@+id/fll_other_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>